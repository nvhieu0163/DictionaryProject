<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<HBox fx:id="meaningBox" prefWidth="340.0"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Circle fill="DODGERBLUE" radius="3.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
            <HBox.margin>
                <Insets right="3.0" top="10.0"/>
            </HBox.margin>
        </Circle>
        <TextFlow prefWidth="321.0">
            <children>
                <Text fx:id="content" lineSpacing="1.5" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="This line is used for a phrase in meaning, and this line maybe very long.">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Text>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </TextFlow>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets top="3.0"/>
    </padding>
</HBox>
