<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<FlowPane prefHeight="640.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.WordDetailController">
    <children>
        <ToolBar minHeight="53.0" prefHeight="45.0" prefWidth="360.0">
            <items>
                <Button graphicTextGap="0.0" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT"
                        onAction="#actionHome" style="-fx-background-color: transparent;" text="Home">
                    <graphic>
                        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true"
                                   scaleX="0.5">
                            <image>
                                <Image url="@../img/baseline_keyboard_arrow_left_black_48dp.png"/>
                            </image>
                            <viewport>
                                <Rectangle2D/>
                            </viewport>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="16.0"/>
                    </font>
                    <padding>
                        <Insets left="-5.0"/>
                    </padding>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Pane prefHeight="200.0" prefWidth="160.0"/>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#actionEdit">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/baseline_edit_black_48dp.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Pane prefHeight="200.0" prefWidth="1.0"/>
                <Button layoutX="65.0" layoutY="13.0" mnemonicParsing="false" onAction="#actionDelete">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/baseline_delete_forever_black_48dp.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </items>
        </ToolBar>
        <ListView fx:id="wordDetail" prefHeight="587.0" prefWidth="360.0"/>
    </children>
</FlowPane>
